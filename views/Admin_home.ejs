<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/admin_home.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>
<body>
    <nav class="navbar">
        <ul class="nav-links">
            <li><a href='/'><i class="fa-solid fa-house"></i> Home</a></li>
            <li><a onclick="window.location.href='/Adminaccount'"> Account</a></li>
            <li><a onclick="window.location.href='/AdminResetpassword'"> Reset Password</a></li>
            <li><a onclick="window.location.href='/Adminmanageuser'"> Manage Users</a></li>
            <li><a onclick="window.location.href='/AlertUser'"> Alert User</a></li>
            <li><a onclick="window.location.href='/Userissue'"> User Issue</a></li>
            <li><a onclick="window.location.href='/Adminmanagecontent'"> Manage Content</a></li>
            <li><a class="logout"> Logout</a></li>
        </ul>
        <div class="navbar-search">
            <form action="/adminsearch" method="GET" class="navbar-search">
                <input type="text" name="query" id="searchInput" placeholder="Search..." required>
                <button type="submit" class="btn btn-warning" id="searchbtn">Search</button>
            </form>
        </div>
    </nav>

    <div class="parent">
        <h3 class="Edithead">Edit Home Page Contents</h3>
    </div>    

    <div class="container0" id="co">
            <div class="header">New Updates</div>
            
            <div class="updates">
                <ul>
                    <% for (const update of homepageResults) { %>
                        <li><a><%= update.title %></a>
                            <div class="actions">
                                <a class="editbtn" href="http://localhost:8080/homepageupdateedit/<%= update.id %>/edit">Edit</a>
                                <form method="post" action="/homepageupdatedelete/<%= update.id %>?_method=DELETE">
                                    <button class="delete-btn">Delete</button>
                                </form>
                            </div>
                        </li>
                    <% } %>
                    <li class="addnewcontent">
                        <button onclick="window.location.href='/homepageupdatenew'" class="addnewcontentbtn">Add New</button>
                    </li>
                </ul>
            </div>
    </div>
</div>
        
<div class="grid-container">
    <% for (let i = 0; i < Math.min(4, gridResults.length); i++) { %>
        <div class="grid-item">
            <span class="title"><%= gridResults[i].title %></span>
            <div class="gridactions">
                <a class="grideditbtn" href="http://localhost:8080/homepagegrid/<%= gridResults[i].id %>%>/edit">Edit</a>
                <form method="post" action="/homepagegriddelete/<%= gridResults[i].id %>?_method=DELETE">
                    <button class="griddelete-btn">Delete</button>
                </form>
            </div>
        </div>
    <% } %>
</div>

<div class="grid-container2">
    <% for (let i = 4; i < Math.min(8, gridResults.length); i++) { %>
        <div class="grid-item2">
            <span class="title"><%= gridResults[i].title %></span>
            <div class="gridactions">
                <a class="grideditbtn" href="http://localhost:8080/homepagegrid/<%= gridResults[i].id %>%>/edit">Edit</a>
                <form method="post" action="/homepagegriddelete/<%= gridResults[i].id %>?_method=DELETE">
                    <button class="griddelete-btn">Delete</button>
                </form>
            </div>
        </div>
    <% } %>
</div>

<div class="grid-container3">
    <% for (let i = 8; i < Math.min(12, gridResults.length); i++) { %>
        <div class="grid-item3">
            <span class="title"><%= gridResults[i].title %></span>
            <div class="gridactions">
                <a class="grideditbtn" href="http://localhost:8080/homepagegrid/<%= gridResults[i].id %>/edit">Edit</a>
                <form method="post" action="/homepagegriddelete/<%= gridResults[i].id %>?_method=DELETE">
                    <button class="griddelete-btn">Delete</button>
                </form>
            </div>
        </div>
    <% } %>    
</div>

<div class="addnewgrid">
        <button onclick="window.location.href='/homepagegridnew'" class="newgridbtn">Add New</button>
</div>

<div class="container2">
    <div class="column2">
        <h2>Job Notifications</h2>
        <ul>
            <% for (let job of jobs) { %>
                <li><a><%= job.title %></a>
                    <div class="actions">
                        <a class="editbtn" href="http://localhost:8080/homepagejobs/<%= job.id %>/edit">Edit</a>
                        <form method="post" action="/homepagejobsdelete/<%= job.id %>?_method=DELETE">
                            <button class="delete-btn">Delete</button>
                        </form>
                    </div>
                </li>
            <% } %>
            <li>
                <button onclick="window.location.href='/homepagejobsnew'" class="addnewcontentbtn">Add New</button>
            </li>
        </ul>
    </div>
</div>
</body>
</html>